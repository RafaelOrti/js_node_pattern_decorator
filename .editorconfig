# Archivo .editorconfig

# Indentación de 2 espacios
[*.{js,jsx,ts,tsx,json,yml,yaml,md}]
indent_style = space
indent_size = 2

# Indentación de 4 espacios para archivos Makefile
[Makefile]
indent_style = space
indent_size = 4

# Usar LF (salto de línea) como separador de líneas en todos los archivos
[*.{js,jsx,ts,tsx,css,scss,html,json,yml,yaml,md}]
end_of_line = lf

# UTF-8 como la codificación de caracteres
[*.{js,jsx,ts,tsx,css,scss,html,json,yml,yaml,md}]
charset = utf-8

# Usar punto y coma como separador en JavaScript
[*.js]
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
quote_type = single

# Usar tabulaciones en los archivos TypeScript
[*.ts]
indent_style = tab
indent_size = 2

# Excluir la indentación en algunos archivos
[package.json]
indent_style = ignore

# Excluir el ajuste de final de archivo en algunos archivos
[*.{md,txt}]
insert_final_newline = ignore
